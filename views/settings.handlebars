{{#unless cameback}}
{{#if user.canLoginManual}}
    <h3 style="text-align:center; margin-bottom: 2%">Change Password</h3>
{{else}}
    <div class="alert alert-success" style="text-align:center">
        Now you can set a new a password, there after you can login with password and also
        {{#if user.canLoginWith.facebook}} Facebook {{/if}}
        {{#if user.canLoginWith.google}} , Google {{/if}} .
    </div>
{{/if}}
{{/unless}}

<form name="settingsForm" method="post" action="/settings/changePassword" data-toggle="validator" role="form">
    <input type="hidden" name="_csrf" value={{csrfToken}} />
    {{#if user.canLoginManual }}
    <div class="form-group">
        <div class="row">
            <div class="col col-md-4 col-centered">
                <label for="inputPassword" class="control-label">Current password</label>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                    <input type="password" name="password" minlength="6" maxlength="10" class="form-control" id="inputPass" placeholder="Current Password" required>
                </div>
                <div class="help-block with-erros"></div>
            </div>
        </div>
    </div>
    {{/if}}
    <h4 style="text-align:center">Set New Password</h4>

    <div class="form-group">
        <div class="row">
            <div class="col col-md-4 col-centered">
                <label for="inputPassword" class="control-label">New password</label>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                    <input type="password" name="password1" minlength="6" maxlength="10" class="form-control" id="inputPassword" placeholder="New password" required>
                </div>
                <div class="help-block" >Minimum 6 characters</div> 
                <div class="help-block with-erros"></div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-centered col-md-4">
                <label for="confirmPassword" class="control-label">Confirm password</label>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                    <input type="password" name="password2" class="form-control" id="inputPasswordConfirm" minlength="6" maxlength="10"  data-match="#inputPassword" data-match-error="Oops password do not match"
                        placeholder="Confirm new password" required>
                </div>
                <div class="help-block with-errors"></div>
            </div>
        </div>
    </div>
    <div style="margin: auto; text-align:center">
        <button type="submit" class="btn btn-md btn-success"><i class="fa fa-pencil" aria-hidden="true"></i> Update</button>
    </div>
</form>