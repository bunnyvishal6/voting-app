<signup-buttons></signup-buttons>

<h3 style="text-align:center">OR</h3>
<h4 style="text-align:center">Sign up with email and password</h4>

<form name="formSignUp" id="formSignUp" method="post" action="/signup" data-toggle="validator" role="form">
    <input type="hidden" name="_csrf" value={{csrfToken}} />
    <div class="form-group">
        <div class="row">
            <div class="col-md-4 col-centered">
                <label>Name</label>
                <input type="text" maxlength="20" class="form-control" name="name" placeholder="Username" required>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-4 col-centered">
                <label>Username</label>
                <input type="email" maxlength="30" minlength="6" class="form-control" name="username" placeholder="Username" required>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-centered col-md-4">
                <label for="inputPassword" class="control-label">Password</label>
                <input type="password" name="password" minlength="6" maxlength="10" class="form-control" id="inputPassword" placeholder="Password" required>
                <div class="help-block" >Minimum 6 characters</div> 
                <div class="help-block with-erros"></div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-centered col-md-4">
                <label for="confirmPassword" class="control-label">Confirm password</label>
                <input type="password" name="password2" class="form-control" id="inputPasswordConfirm" minlength="6" maxlength="10"  data-match="#inputPassword" data-match-error="Oops password do not match"
                    placeholder="Confirm password" required>
                <div class="help-block with-errors"></div>
            </div>
        </div>
    </div>
    <div style="margin: auto; text-align:center">
        <button type="submit" class="btn btn-md btn-success">Sign up</button>
    </div>
</form>

