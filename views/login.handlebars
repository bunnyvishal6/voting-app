<login-buttons></login-buttons>

<h3 style="text-align: center">OR</h3>
<h4 style="text-align: center">Login with Username and Password</h4>

<form method="post" action="/login" data-toggle="validator" role="form">
    <input type="hidden" name="_csrf" value={{csrfToken}} />
    <div class="form-group">
        <div class="row">
            <div class="col-md-4 col-centered">
                <label>Username</label>
                <input type="email" maxlength="30" minlength="6" class="form-control" name="username" placeholder="Username" required>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-4 col-centered">
                <label>Password</label>
                <input type="password" maxlength="10" minlength="6" class="form-control" name="password" placeholder="Password" required>
            </div>
        </div>
    </div>
    <div style="margin:auto; text-align:center">
        <button type="submit" class="btn btn-md btn-success">Login</button>
    </div>
</form>